<h1>Blog Post</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td>
          <%= link_to 'Show', post_path(post), class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %>
          <td>
              <%= button_to 'Delete', post_path(post), method: :delete, class: 'btn btn-danger' %>
          </td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Create New Post', new_post_path, class: 'btn btn-primary' %>