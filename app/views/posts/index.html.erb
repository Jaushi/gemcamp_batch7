<table class="table table-dark table-striped">
  <thead>
    <tr>
      <td>Title</td>
      <td>Content</td>
      <td>Actions</td>
      <td>Created At</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td class="actions-cell">
          <%= link_to 'Show', post_path(post), class: 'btn btn-sm btn-primary' %>
          <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-sm btn-warning' %>
          <%= button_to 'Delete', post_path(post), method: :delete, class: 'btn btn-sm btn-danger' %>
        </td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Create New Post', new_post_path, class: 'btn btn-primary' %>