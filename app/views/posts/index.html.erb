<h1>Blog Post</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Content</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Create New Post', new_post_path, class: 'btn btn-primary' %>